{
  "compilerOptions": {
    "baseUrl": "./src/",
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true,
        "ignoreDefinitionFiles": true,
        "configFile": "./tslint.json",
        "disableNoUnusedVariableRule": true,
        "supressWhileTypeErrorsPresent": false
      }
    ],
    "jsx": "react",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": [
      "es6",
      "dom"
    ],
    "mapRoot": "./src/",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": false,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@syndesis/ui/*": [
        "src/app/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
    "./webpack.config.js",
    "./preprocessor.js",
    "./sum.ts",
    "./index.test.tsx",
    "./index.tsx",
    "./images.d.ts",
    "./jest.config.js"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "scripts/**",
    "coverage/**",
    "docker/**"
  ]
}
